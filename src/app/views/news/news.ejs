<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>News</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body>
  <nav class="navbar navbar-dark bg-dark">
    <a href="#" class="navbar-brand mx-auto">NEWS</a>
  </nav>

  <div class="container">
    <div class="row">
      <div class="col-md-6 mt-4 text-center">
        <table class="table table-striped table-bordered">
          <tr>
            <th>ID</th>
            <th>Title</th>
            <th>News</th>
          </tr>
          <% for (var i = 0; i < news.length; i ++) { %>
            <tr>
              <td><%= news[i].id_news %></td>
              <td><%= news[i].title %></td>
              <td><%= news[i].news %></td>
            </tr>
          <% } %>
        </table>
      </div>

      <div class="col-md-6 mt-4 card">
        <form class="card-body" action="/news" method="post">
          <h3 class="card-title">Add News</h3>
          <div class="form-group">
            <input id="title" name="title" type="text" class="form-control" placeholder="News Titlte">
          </div>
          <div class="form-group">
            <input name="news" type="text" class="form-control" placeholder="News Content">
          </div>
          <input type="submit" class="btn btn-primary">
        </form>
      </div>
    </div>
  </div>

  <script>
    document.getElementById('title').focus();
  </script>
</body>
</html>